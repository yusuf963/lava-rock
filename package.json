{
  "name": "express-ts-esm-mongoose-starter",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.6"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "postinstall": "npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "posttest": "npm run format && ts-prune",
    "check:unused": "ts-prune",
    "debug": "export NODE_ENV=development && tsx watch src/index.ts",
    "start": "export NODE_ENV=production && cross-env NODE_OPTIONS=\"--import specifier-resolution-node/register\" node dist/index.js",
    "run:prod": "export NODE_ENV=production && npm run build && NODE_OPTIONS=\"--import specifier-resolution-node/register\" node dist/index.js",
    "coverage": "nyc npm run test",
    "clean": "rm -rf ./dist ./public/js ./public/css ./stats",
    "pm2": "pm2",
    "start:dev": "pm2 start ecosystem.config.js --only app-dev",
    "start:prod": "pm2 start ecosystem.config.js --only app-prod"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "@typescript-eslint/parser": "^8.40.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "specifier-resolution-node": "^1.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)$": "$1"
    }
  }
}
