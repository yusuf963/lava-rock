{
  "name": "express-ts-esm-mongoose-starter",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.6"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand && npm run format",
    "debug": "export NODE_ENV=development && tsx watch src/index.ts",
    "start": "export NODE_ENV=production && cross-env NODE_OPTIONS=\"--import specifier-resolution-node/register\" node dist/index.js",
    "run:prod": "export NODE_ENV=production && npm run build && NODE_OPTIONS=\"--import specifier-resolution-node/register\" node dist/index.js",
    "coverage": "nyc npm run test",
    "clean": "rm -rf ./dist ./public/js ./public/css ./stats",
    "pm2": "pm2",
    "start:dev": "pm2 start ecosystem.config.js --only app-dev",
    "start:prod": "pm2 start ecosystem.config.js --only app-prod"
  },
  "dependencies": {
    "express": "^4.21.2",
    "mongoose": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "specifier-resolution-node": "^1.1.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)$": "$1"
    }
  }
}
